<!doctype html>
<html lang="en">
  <head>
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/style.css">
    
    <title>Spookify Layout Page</title>
  </head>
  <body>

      <div id="header" class="navbar navbar-transparent sticky-top">
          <img src="~/img/spookify2.png" alt="spookify logo" class="navbar-brand d-inline-block align-top" width="300" height="200">
          <div>
            <ul class="nav justify-content-end">
                <li class="nav-item">
                  <a class="nav-link active" href="#">Premium</a>
                </li>
                <li class="nav-item">
                  <a class="nav-link" href="#">Help</a>
                </li>
                <li class="nav-item">
                  <a class="nav-link" href="#">Download</a>
                </li>
                <li role="separator" class="divider"></li>
                <li class="nav-item">
                  <a class="nav-link" href="#">Upgrade</a>
                </li>
                
                <!-- IF Logged in -->
                @if (ViewBag.user != null)
                {
                  <li class="nav-item dropdown">
                  <a class="nav-link dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">Profile</a>
                    <div class="dropdown-menu dropdown-menu-right">
                        <a class="dropdown-item" href="#">Account</a>
                        <a class="dropdown-item" href="logout">Logout</a>
                    </div>
                  </li>
                } 
                <!-- IF Logged in -->
                @if (ViewBag.user == null)
                {
                  <!-- If Not Logged in -->
                  <li>
                      <a class="nav-link" href="register">Sign Up</a>
                  </li>
                  <li>
                      <a class="nav-link" href="login">Sign In</a>
                  </li>
                <!-- If Not Logged in -->
                }
            </ul>
          </div>
      </div>
      <div id="content">
            <div id="carousel" class="carousel slide" data-ride="carousel">
                <div class="carousel-inner">
                      <div class="carousel-item active">
                        <img class="d-block w-100" src="~/img/spooky1.png" alt="First slide">
                      </div>
                      <div class="carousel-item">
                        <img class="d-block w-100" src="~/img/spooky2.jpg" alt="Second slide">
                      </div>
                      <div class="carousel-item">
                        <img class="d-block w-100" src="~/img/spooky3.jpg" alt="Third slide">
                    </div>
                </div>
                  <a class="carousel-control-prev" href="#carousel" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                  </a>
                  <a class="carousel-control-next" href="#carousel" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                  </a>
            </div>
        </div>
      <div id="footer" class="navbar-fixed-bottom navbar-dark bg-dark">
            <img src="~/img/spookify2.png" alt="spookify logo" class="navbar-brand d-inline-block align-top" width="180" height="120">

      </div>

    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
  </body>
</html>